<div id="alert">

</div>
<div class="container mt-5">
    <div class="card">
        <div class="card-body mt-5">
            <div id="criptORdecript">
                <ul>
                    <form action="/upload" method="post" enctype="multipart/form-data">
                        <li>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Arquivo</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" name="file" class="custom-file-input" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Carrege o Arquivo</label>
                                </div>
                            </div>
                        </li>
                        <li><button onclick="upfile()" type="submit" class="btn btn-info mt-1">Enviar</button></li>
                    </form>
                </ul>

                <hr>
                <div class="Files_systens">
                    {{#each paths}}
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                    {{/each}}

                </div>
                <hr>
                <div class="selectFile">
                    <select name="file" id="" class="form-control">
                        {{#each paths}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="action">
                    <form action="/action" method="post">
                        <ul>
                            <label for="action" class="mt-3">Escolha a opção</label>
                            <select name="action" id="action" class="form-control">
                                <option value="null">Selecione</option>
                                <option value="cript">Cryptography</option>
                                <option value="decript">Decriptography</option>
                            </select>
                            </li>
                            <li>
                                <button onclick="action()" class="btn btn-success mt-4">Criptogaphy or
                                    Decriptography</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>